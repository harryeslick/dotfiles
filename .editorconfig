# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[{*.r, *.R, *.Rmd}]
indent_style = space
indent_size = 4
quote_type = single
max_line_length = 120

[*.ts]
quote_type = single

[.py]
indent_style = space
indent_size = 4
max_line_length = 120

[{*.md, *.qmd, *.Rmd}]
max_line_length = off
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[{*.yml,*.yaml}]
indent_style = space
indent_size = 2
